// vim:ft=javascript
// $Id$

ARG_ENABLE('cgi', 'Build CGI version of PHP', 'yes');
ARG_ENABLE('cgi-options', 'Support parsing command-line options when running as CGI', 'yes');

if (PHP_CGI == "yes") {
	ADD_FLAG("LDFLAGS_CGI", "/stack:8388608");
	SAPI('cgi', 'cgi_main.c fastcgi.c', 'php-cgi.exe');
	ADD_FLAG('LIBS_CGI', 'ws2_32.lib kernel32.lib advapi32.lib');
}

if (PHP_CGI_OPTIONS == "no") {
	AC_DEFINE('PHP_DISABLE_CGI_OPTIONS', 1, 'Define if CGI options should be disabled');
}
